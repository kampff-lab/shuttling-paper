issn = {1932-6203},
journal = {PloS one},
month = {jan},
number = {6},
pages = {e98662},
pmid = {24893154},
title = {{Different Modulation of Common Motor Information in Rat Primary and Secondary Motor Cortices.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/24893154},
volume = {9},
year = {2014}
}
