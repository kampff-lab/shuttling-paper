keywords = {Algorithms,Animals,Brain Mapping,Hand,Hand: physiology,Haplorhini,Haplorhini: physiology,Human Body,Models, Neurological,Motor Cortex,Motor Cortex: physiology,Movement,Movement: physiology,Psychomotor Performance},
